# Database Configuration
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://postgres:password@localhost:5432/novalink

# Session Configuration (generate a secure random string)
SESSION_SECRET=replace_with_secure_random_string

# Replit Authentication Configuration
# Comma-separated list of domains where your app runs
REPLIT_DOMAINS=yourapp.replit.app,localhost:5000

# Your Repl ID (found in Replit dashboard)
REPL_ID=your_repl_id

# OpenID Connect issuer URL (default is Replit's)
ISSUER_URL=https://replit.com/oidc

# Optional: Replit API Key (needed for connecting to actual Replit agents)
# Obtain from Replit dashboard
# REPLIT_API_KEY=your_replit_api_key